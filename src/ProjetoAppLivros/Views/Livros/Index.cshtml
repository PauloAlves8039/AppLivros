@model IEnumerable<ProjetoAppLivros.Models.Livro>

@{
    ViewData["Title"] = "Index";
}

<h1>Início</h1>

<p>
    <a asp-action="Create">Adicionar Novo Livro</a>
</p>

<form asp-controller="Livros" asp-action="Index" class="form-inline">
    <p>
        Título: <input type="text" name="titulo" id="pesquisarLivro" class="form-control">
        <input type="submit" id="pesquisar" value="PESQUISAR" class="btn btn-info" onclick="validarCampoPesquisa()" />
        <button id="limparCampo" class="btn btn-outline-dark" onclick="limparCampoPesquisa()">CANCELAR</button>
    </p>
</form>

<table class="table table-striped table-light table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Titulo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Autor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genero)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Lancamento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Editora)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Titulo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Autor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genero)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Lancamento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Editora)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Excluir</a>
            </td>
        </tr>
}
    </tbody>
</table>

@section Scripts {
    <script src="~/js/site.js" asp-append-version="true"></script>
}
@model ProjetoAppLivros.Models.Livro

@{
    ViewData["Title"] = "Create";
}

<h1>Adicionar</h1>

<h4>Livro</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Titulo" class="control-label"></label>
                <input id="livroTitulo" asp-for="Titulo" class="form-control" />
                <span asp-validation-for="Titulo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Autor" class="control-label"></label>
                <input id="livroAutor" asp-for="Autor" class="form-control" />
                <span asp-validation-for="Autor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Genero" class="control-label"></label>
                <input id="livroGenero" asp-for="Genero" class="form-control" />
                <span asp-validation-for="Genero" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Lancamento" class="control-label"></label>
                <input id="livroLancamento" asp-for="Lancamento" class="form-control" />
                <span asp-validation-for="Lancamento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Editora" class="control-label"></label>
                <input id="livroEditora" asp-for="Editora" class="form-control" />
                <span asp-validation-for="Editora" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="ADICIONAR" class="btn btn-success" />
                <button id="limparCampos" class="btn btn-outline-dark" onclick="limparCamposCriacao()">CANCELAR</button>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">lista de Livros</a>
</div>

@section Scripts {
    <script src="~/js/site.js" asp-append-version="true"></script>
}